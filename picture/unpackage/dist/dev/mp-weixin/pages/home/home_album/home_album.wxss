.album_swiper swiper {
  height: calc(750rpx/2.3);
}
.album_swiper swiper swiper-item image {
  width: 100%;
}
.album_list {
  padding: 10rpx;
}
.album_list .album_item {
  padding: 10rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.album_list .album_item .album_img {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 10rpx;
  border-bottom: 1rpx solid #F4F4F5;
}
.album_list .album_item .album_img image {
  width: 200rpx;
  height: 200rpx;
}
.album_list .album_item .album_info {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  padding: 0 10rpx ;
  overflow: hidden;
}
.album_list .album_item .album_info .album_name {
  font-size: 30rpx;
  color: #000;
  padding: 10rpx 0;
}
.album_list .album_item .album_info .album_desc {
  padding: 10rpx 0;
  font-size: 24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.album_list .album_item .album_info .album_btn {
  padding: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.album_list .album_item .album_info .album_btn .album_attention {
  color: #d52a7e;
  border: 1rpx solid #d52a7e;
  padding: 10rpx;
}
.album_scroll {
  height: 100vh;
}

